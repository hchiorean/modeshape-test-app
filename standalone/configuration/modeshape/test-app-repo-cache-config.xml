            <transaction mode="NON_DURABLE_XA" locking="PESSIMISTIC"/>
            <eviction max-entries="10" strategy="LIRS"/>
            <expiration interval="-1"/>
            <persistence
                    passivation="false">
                <file-store fetch-state="false"
                            shared="false"
                            preload="false"
                            purge="false"
                            path="${jboss.server.data.dir}/modeshape/store/test-app"/>
